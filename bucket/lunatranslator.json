    "version": "8.6.4",
    "architecture": {
        "64bit": {
            "url": "https://lunatranslator.org/r2/luna/LunaTranslator_v8.6.4_x64.zip",
            "hash": "81a9cb41dc7f82af06b4c439317c3033d383b7234122791f4386c2f431eab5c5",
            "extract_to": "temp",
            "pre_install": [
                "Move-Item -Path \"$dir\\temp\\LunaTranslator\\*\" -Destination \"$dir\"",
                "Remove-Item \"$dir\\temp\" -Force -Recurse"
            ]
        },
        "32bit": {
            "url": "https://lunatranslator.org/r2/luna/LunaTranslator_v8.6.4_x86.zip",
            "hash": "2b7093093e00b608decb38a548b62af519cf70cba7e8a7b5289b46d7a01f7e3c",
            "extract_to": "temp",
            "pre_install": [
                "Move-Item -Path \"$dir\\temp\\LunaTranslator_x86\\*\" -Destination \"$dir\"",
                "Remove-Item \"$dir\\temp\" -Force -Recurse"
            ]
        }
    },
    "shortcuts": [
        [
            "LunaTranslator.exe",
            "LunaTranslator"
        ]
    ],
    "persist": [
        "cache",
        "translation_record",
        "userconfig"
    ],
    "checkver": {
        "url": "https://lunatranslator.org/ChangeLog",
        "regex": "-([\\d.]+)</title>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://lunatranslator.org/r2/luna/LunaTranslator_v$version_x64.zip"
            },
            "32bit": {
                "url": "https://lunatranslator.org/r2/luna/LunaTranslator_v$version_x86.zip"
            }
        }
    }
}
